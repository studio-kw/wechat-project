.top-content {
  width: 100%;
  height: 300px;
  background-color: #008B7D;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.horizontal-view {
  display: flex;
  flex-direction: row;
  align-items: center ;
}
.user-img {
  width: 100px;
  height: 100px;
}
.icon{
  width: 15px;
  height: 15px;
}
.user-name{
  font-size: 16px;
  color: white;
  margin-right: 5px;
}
.user-dept{
  font-size: 12px;
  color: white;
}
.content-view{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20px;
}
.arrow{
  width: 8px;
  height: 10px;
}
.content-text{
  font-size: 16px;
  margin-left: 10px;
  width: 100%;
}
